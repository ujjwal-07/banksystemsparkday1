<title>Add Money</title>
</head>
<body>
  <header>
    <a href="http://127.0.0.1:5500/practice.html" style="color: black;"><input type="button" class="btn btn-dark" value="Home"></a>

  </header>
  <br><br><br>
    <table class="table table-hover table-dark">
      <tbody> 
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Transfer</th>
          </tr>
        </thead>
          
            <% var i = 1
            dataList.forEach(data =>{%>                
                  <tr>
                    <th scope="row"><%=i++%></th>
                    <td><%=  data.name %></td>
                    <td><%=  data.email %></td>
                    <td><%=  data.balance %></td>
                    <td> <a href="http://localhost:8080/updatebalance/<%=  data.email %>"> <button class="btn btn-dark">Add Money</button></a></td>
                  </tr>             
                      <%})%>
      </tbody>
    </table>
    </div>
    <script src="../connectivity.js"></script>
</body>
